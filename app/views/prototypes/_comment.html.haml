.media
  .media-left
    = link_to image_tag(current_user.avatar, alt: '64x64', size: "64x64", class: 'media-object' ), user_path(current_user)
  .media-body
    %h4#top-aligned-media.media-heading
      = current_user.nickname
    .anchorjs-link
      .anchorjs-icon
        %p
          = comment.text

