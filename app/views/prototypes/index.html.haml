.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{ role: "presentation" }
          = link_to 'Popular PROTO', '#'
        %li{ role: "presentation" }
          = link_to 'Newest PROTO', '#'
      = button_tag 'View Tags', type: "button", class: "btn btn-default col-lg-1"

.container.proto-list
  .row
    .col-sm-4.col-md-3.proto-content
      .thumbnail
        = link_to '/prototypes/show' do
          = image_tag("sample.png")
          .caption
            %h3 Salvation Army on iPad App Wireframe
            .proto-meta
              .proto-user
                = link_to 'by User', '#'
              .proto-posted
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                = link_to 'iPad', '#', class: "btn btn-default"
              %li
                = link_to 'wireframe', '#', class: "btn btn-default"

.text-center
  %ul.pagination
    %li.active
      = link_to '1', '#'
    %li
      = link_to '2', '#'
    %li
      = link_to '3', '#'
    %li
      = link_to '4', '#'
    %li
      = link_to '5', '#'
