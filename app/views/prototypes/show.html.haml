.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
        = link_to ''
        %img.media-pbject{ alt: "64×64", data_holder_rendered: "true", data_src: "holder.js/64×64", style: "width: 64px; height: 64px;" }/
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to "by #{@prototype.user.nickname}", user_path
            %span.degree
              = @user.member
            %span
              = @user.work

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag(@prototype.thumbnails.first.image_url, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @prototypes.each do |prototype|
          = link_to prototype_path(prototype), class: 'sub_images' do
            %li.list-group-item
              = image_tag(prototype.image_url, class: 'img-responsive') if prototype.image_url.present?

  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p= @prototype.catchcopy

    .col-md-6
      %h4 Concept
      %p= @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
    .col-md-8
      = render partial: 'prototypes/comment', collection: @comments

      %form.form-inline{role: "form"}
        - if user_signed_in?
          = form_for [@prototype, @comment], url: "/prototypes/#{@prototype_id}/comments", method: :post, remote: true do |f|
            = f.hidden_field :user_id, value: current_user.id
            = f.hidden_field :prototype_id, value: @prototype.id
            %h4 Write a comment
            .row
              .form-group.col-md-10
                = f.text_area :text, placeholder: 'Your comments', rows: "3", id: "comment_content", class: "form-control"
              .form-group.col-md-2
                = f.submit 'Comment', class: 'btn btn-primary'







